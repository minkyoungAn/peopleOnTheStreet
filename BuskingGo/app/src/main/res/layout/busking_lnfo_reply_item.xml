<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <GridLayout
        android:id="@+id/gl_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <ImageView
            android:id="@+id/iv_reReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_subdirectory_arrow_right_white_24dp"
            android:layout_margin="8dp"
            android:visibility="gone"
            />
        <RelativeLayout
            android:id="@+id/rl_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/itemBuskingBackground"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/reply_user_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:padding="8dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/reply_currentTime"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/reply_comment"
                android:layout_below="@id/reply_user_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:layout_marginBottom="8dp"/>

          <!--  <TextView
                android:id="@+id/reply_add"
                android:layout_below="@id/reply_comment"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:padding="8dp"
                android:drawableStart="@drawable/comment_black_oval_bubble_16dp"
                android:drawablePadding="4dp"
                android:text="@string/reply"/>-->
        </RelativeLayout>

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/gl_reply"
        android:background="@color/itemBuskingBackground"
        />


</RelativeLayout>