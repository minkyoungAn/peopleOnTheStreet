<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/itemBuskingBackground"
    android:padding="8dp"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/like_busker_photo_item"
        android:background="@color/itemBuskingBackground"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="4sp"/>

    <TextView
        android:id="@+id/busker_name"
        android:layout_below="@id/like_busker_photo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/buskerInfoName"/>

    <TextView
        android:id="@+id/textViewBuskingPlace"
        android:layout_below="@id/busker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="장소"/>

    <TextView
        android:id="@+id/textViewBuskingTime"
        android:layout_below="@id/busker_name"
        android:layout_toEndOf="@id/textViewBuskingPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/white"
        android:text="시간"/>


</RelativeLayout>