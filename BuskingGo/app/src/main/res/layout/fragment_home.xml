<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/mainBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:text="@string/home"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/text_home">

            <TextView
                android:id="@+id/recommend_busking_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:text="이런 버스킹 어때요?"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText"/>

            <GridView
                android:id="@+id/recommend_busking_gridView"
                android:layout_width="280dp"
                android:layout_height="285dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:dividerHeight="10dp"
                android:horizontalSpacing="10dip"
                android:numColumns="2"
                android:verticalSpacing="10dip"
                tools:ignore="NestedScrolling" />

            <TextView
                android:id="@+id/today_busking_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:text="오늘의 버스킹"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText"/>

            <ListView
                android:id="@+id/today_busking_listview"
                android:layout_width="280dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:dividerHeight="10dp"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>